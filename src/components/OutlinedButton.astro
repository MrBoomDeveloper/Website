---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<"div"> {
	text: string,
	type?: "button" | "submit" | "reset" | null | undefined
}

const { 
	text,
	type,
	...props
} = Astro.props
---

<button type={type} class="container" {...props}>
	<span class="label">{text}</span>
</button>

<style lang="scss">
	.container {
		position: relative;
		padding: .75rem 2.6rem;
		border-radius: .6rem;
		transition: .3s;
		background-color: transparent;
		border: 0 none transparent;
		font-size: .9em;

		&::before {
			content: "";
			position: absolute;
			display: block;
			border: rgb(255, 182, 255) solid 2px;
			border-radius: .6rem;
			width: 100%;
			height: 100%;
			inset: 0;
		}

		&:hover {
			background-color: rgb(255, 182, 255);
			box-shadow: inset 0 0 .4rem rgb(255, 182, 255), 0 0 .4rem rgb(255, 182, 255), 0 0 2rem rgba(255, 255, 255, .2), 0 0 4rem rgba(255, 255, 255, .1);
			scale: .985;
		}

		&:active {
			scale: .95;
		}
	}

	.label {
		color: rgb(255, 182, 255);
		font-family: poppins, sans-serif;
		font-weight: 600;
		transition: .2s;
	}

	.container:hover .label {
		color: black;
		font-weight: 700;
	}
</style>
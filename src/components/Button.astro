---
interface Props {
	text: string
}

const { text } = Astro.props
---

<div class="container">
	<span class="label">{text}</span>
</div>

<style>
	.container {
		position: relative;
		padding: .8rem 2.4rem;
		border-radius: .6rem;
		background-color: white;
		transition: .2s;
	}

	.container::after {
		content: "";
		position: absolute;
		display: block;
		border: transparent solid 2px;
		border-radius: .6rem;
		width: 100%;
		height: 100%;
		inset: 0;
		transition: .2s;
	}

	.container:hover {
		background-color: black;
		box-shadow: 0 0 .4rem white;
	}

	.container:hover::after {
		border: white solid 2px;
	}

	.container:active {
		scale: .95;
	}

	.label {
		color: black;
		font-family: sans-serif;
		font-weight: 600;
		transition: .2s;
	}

	.container:hover .label {
		color: white
	}
</style>